<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    style="@android:style/Theme.Holo.Light.Panel">

    <org.techteam.bashhappens.gui.views.RatingView
        android:id="@+id/rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:value="@string/unknown_rating"
        android:layout_alignParentLeft="true"
        />

    <ImageButton
        android:id="@+id/post_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/post_like"
        android:contentDescription="@string/post_fav"
        android:layout_alignParentRight="true"
        />

    <ImageButton
        android:id="@+id/post_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/post_like"
        android:contentDescription="@string/post_share"
        android:layout_toLeftOf="@id/post_fav"
        />

    <ImageButton
        android:id="@+id/post_bayan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:src="@drawable/post_bayan"
        android:contentDescription="@string/post_bayan"
        android:layout_toLeftOf="@id/post_share"
        />

</RelativeLayout>