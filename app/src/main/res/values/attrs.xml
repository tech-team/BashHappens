<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatingView">
        <attr name="value" format="string" />
        <attr name="state" format="enum">
            <enum name="idle" value="0"/>
            <enum name="liked" value="1"/>
            <enum name="disliked" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PostToolbarView">
        <attr name="rating" format="string" />
        <attr name="liked" format="boolean" />
        <attr name="disliked" format="boolean" />
        <attr name="bayaned" format="boolean" />
        <attr name="faved" format="boolean" />
    </declare-styleable>
</resources>